/**index.wxss**/
.scrollView {
  height: 1000rpx;
  display: flex;
  flex-direction: column;
  font-size: 20rpx;
}

#head {
  font-family: "Arial", Helvetica, sans-serif;
  font-size: 40rpx;
  font-weight: bold;
}

#addView {
  margin-top: 20rpx;
  font-size: 30rpx;
}

.longButton {
  font-family: Arial, Helvetica, sans-serif;
  border: 1px solid gray;
  width: 740rpx;
  height: 80rpx;
  padding: 0;
  margin: 0;
  line-height: 80rpx;
}

#addInfo.closed {
  display: none;
  height: 0;
}

.addInfoItem {
  display: flex;
  flex-direction: row;
  font-family: Arial, Helvetica, sans-serif;
  margin: 20rpx 0;
}

.addInfoItem .addLabel {
  width: 100rpx;
  line-height: 80rpx;
  margin: 0;
}

.addInfoItem .borderedItemInfo {
  width: 620rpx;
  margin: 0;
}

.item {
  display: flex;
  flex-direction: row;
  margin: 20rpx 0;
  font-family: Arial, Helvetica, sans-serif;
}

.disabledBorderedItemInfo {
  border: 1rpx solid gray;
  width: 394rpx;
  height: 80rpx;
  color: gray;
  margin:0;
}

.borderedItemInfo {
  border: 1rpx solid gray;
  width: 394rpx;
  height: 80rpx;
  margin:0;
}

.itemButton {
  width: 110rpx;
  padding: 0;
  height: 80rpx;
  margin: 0 3rpx;
}

.itemButtonNarrow {
  width: 50rpx;
  padding: 0;
  height: 80rpx;
  margin: 0 3rpx;
}


/**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}